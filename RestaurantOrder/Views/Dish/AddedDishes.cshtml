@model RestaurantOrder.Domain.Core.Entities.Order
<link href="~/css/StyleMenuAndAdmin.css" rel="stylesheet" type="text/css" />
<div class="container">
    <div class="dish">
      
        @foreach (var neededDish in Model.NeededDishes)
        {  
            
            
            <h1>@neededDish.Dish.Name: @neededDish.DishQuantity </h1>
            var sum = neededDish.DishQuantity * neededDish.Dish.Price;
            <p class="name"> @neededDish.Dish.Price x @neededDish.DishQuantity = <span>@sum</span></p>
            <a class='make-order' asp-action="DeleteDishFromOrder" asp-route-orderId="@Model.OrderId" asp-route-neededDishId="@neededDish.Id">Delete dish</a>
            <hr/>
            
        }
      
        <a class="make-order" asp-action="GetAll" asp-route-orderId="@Model.OrderId">Continue ordering</a><hr/>
        <a class="make-order" style="background-color: chocolate" asp-controller="Order" asp-action="Complete">Make order</a>
    </div>
</div> 