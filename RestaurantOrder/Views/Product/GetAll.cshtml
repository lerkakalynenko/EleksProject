@model ICollection<RestaurantOrder.Domain.Core.Entities.Product>


<div>
    @foreach (var product in Model)
    {
        @product.Name        
        <form method="post" asp-controller="Product" asp-action="AddProductToList">
            <input name="productId" type="number" hidden value="@product.Id"/>
            <input name="neededDishId" type="number" value="@ViewBag.DishId" hidden/>

            <input name="quantity" type="number" min="1" max="50"/>
            <input type="submit" value="Add to dish" />
        </form>
    }
    <a style="display: block" asp-controller="Admin" asp-action="Index">Create dish from these products</a>
</div>
