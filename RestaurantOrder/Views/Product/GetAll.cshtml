@model ICollection<RestaurantOrder.Domain.Core.Entities.Product>

<link href="~/css/StylePartial.css" rel="stylesheet" type="text/css" />

<h1 style="color: #ad0aff">Add products to dish</h1>
<div class="container">
<div class="dish">
<div>
    @foreach (var product in Model)
    {
        @product.Name        
        <form method="post" asp-controller="Product" asp-action="AddProductToList">
            <input name="productId" type="number" hidden value="@product.Id"/>
            <input name="neededDishId" type="number" value="@ViewBag.DishId" hidden/>

            <input class="input" name="quantity" type="number" min="1" max="50"/>
            <input class="add" type="submit" value="Add to dish" /><hr/>
        </form>
    }<br />
    <a class="make-order" asp-controller="Admin" asp-action="Index">Create dish from these products</a>
</div></div></div>
